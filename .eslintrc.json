{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"]
    }
}
